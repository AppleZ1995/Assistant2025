<% include partials/header %>
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 mb-0">Records</h1>
        <div><a class="btn btn-secondary" href="/">Home</a></div>
      </div>

      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title">Total</h5>
          <p class="h5 mb-0"><%= total %></p>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <% if (!items || items.length === 0) { %>
            <p>No records yet.</p>
          <% } else { %>
            <div class="table-responsive">
              <table class="table table-striped table-sm">
                <thead>
                  <tr><th>Date</th><th>Title</th><th>Category</th><th>Amount</th><th>Type</th><th>Note</th></tr>
                </thead>
                <tbody>
                  <% items.forEach(function(it) { %>
                    <tr>
                      <td><%= new Date(it.date).toLocaleString() %></td>
                      <td><%= it.title %></td>
                      <td><%= it.category || '' %></td>
                      <td><%= it.amount %></td>
                      <td><span class="badge <%= it.type === 'income' ? 'bg-success' : 'bg-danger' %>"><%= it.type %></span></td>
                      <td><%= it.note %></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } %>
        </div>
      </div>
    </div>

<% include partials/footer %>
